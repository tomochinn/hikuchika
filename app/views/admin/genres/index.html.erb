<%= flash[:notice] %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-5">
      <h2>ジャンル一覧・追加</h2>
      
      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @genre, url:admin_genres_path do |f| %>
    
        <div class="field">
          <%= f.label :ジャンル名 %>
          <%= f.text_field :genre_name %>
        </div>
      
        <%= f.submit '新規登録', class: "btn btn-success" %>
    
      <% end %>
      
      
      <div class="col-8">
        <table class="table table-hover table-inverse">
          <tr>
            <th>ジャンル</th>
          </tr>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.genre_name %></td>
              <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
              <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>