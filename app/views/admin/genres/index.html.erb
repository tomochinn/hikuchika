<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-5">
      <h2>ジャンル一覧・追加</h2>
      
      <%= form_with model: @genre, url:admin_genres_path do |f| %>
      
      <%#= f.hidden_field :recipe_id, :value => @genre.recipe_id %>
    
        <div class="field">
          <%= f.label :ジャンル名 %>
          <%= f.text_field :genre_name %>
        </div>
      
        <%= f.submit '新規登録', class: "btn btn-success" %>
    
      <% end %>
      
      
      <div class="col-5">
        <table class="table table-hover table-inverse">
          <tr>
            <th>ジャンル</th>
          </tr>
          <% @genres.each do |genre| %>
          
          <tr>
            <td><%= genre.genre_name %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>