<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="mx-auto col-12 col-sm-10 col-lg-8 col-xl-6">
      <h2><%= @user.name %>さんの投稿レシピ一覧</h2>
      <div class="row">
        <% @recipes.each do |recipe| %>
        <div class="col-3">
          <table>

              <tr>
                <td>
                  <!--recipeイメージ-->
                  <%= link_to recipe_path(recipe.id) do %>
                    <%= image_tag recipe.image, size: "100x100" %>
                  <% end %>

                </td>
              </tr>
              <tr>
                <!--recipe名-->
                <td><%= link_to recipe.recipe_name, recipe_path(recipe.id) %></td>
              </tr>
            </div>
          </table>
          </div>
        <% end %>

      </div>

    </div>

  <%#= paginate @recipes %>

  </div>
</div>
