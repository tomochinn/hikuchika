<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-2">
      <table class="table table-hover table-inverse">
        <tr>
          <th>カテゴリー検索</th>
        </tr>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre_name %></td>
          </tr>
        <% end %>
      </table>
    </div>
      
    <div class="mx-auto col-12 col-sm-10 col-lg-8 col-xl-6">
      <h2>レシピ一覧</h2>
      <div class="row">
        <% @recipes.each do |recipe| %>
        <div class="col-3">
          <table>
            
              <tr>
                <td>
                  <!--recipeイメージ-->
                  <%= link_to recipe_path(recipe.id) do %>
                    <%= image_tag recipe.image, size: "100x100" %>
                  <% end %>
                  
                </td>
              </tr>
              <tr>
                <!--recipe名-->
                <td><%= link_to recipe.recipe_name, recipe_path(recipe.id) %></td>
              </tr>
            </div>
          </table>
          </div>
        <% end %>
        
      </div>
      <%= link_to "レシピを新規登録", new_recipe_path %> 
         
      <p><%#= link_to "#{recipe.comments.count} コメント", recipe_path(recipe.id) %></p>
        
    </div>
  
  <%#= paginate @recipes %>

  </div>
</div>

